<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.junlin.mapper.UserMapper">
    <resultMap id="userMap" type="com.junlin.model.UserModel">
        <id property="id" column="id" ></id>
        <result property="username"  column="username" ></result>
        <result property="password" column="password" ></result>
        <collection property="orderList" ofType="com.junlin.model.OrderModel">
<!--            <result column="id" property="userId"></result>-->
            <result property="orderName" column="ordername" ></result>
            <result property="orderType" column="ordertype" ></result>
            <result property="userId" column="userid"></result>
        </collection>
    </resultMap>
<!--    <select id="SelectUserByOrder" >-->
<!--    </select>-->
    <select id="SelectUser" resultMap="userMap">
        select u.*,o.id id,o.user_id userid,o.order_name ordername,o.order_type ordertype from user u left join `order` o on u.id = o.user_id
    </select>
    <select id="SelectUserById" parameterType="int" resultMap="userMap">
        select u.*,o.id id,o.user_id userid,o.order_name ordername,o.order_type ordertype from user u left join `order` o on u.id = o.user_id where u.id = #{id}
    </select>
    <insert id="InsertUser">
        insert into user values(#{id},#{username},#{password})
    </insert>
    <delete id="DeleteUser" parameterType="int">
        delete from user where id = #{id}
    </delete>
    <update id="UpdateUser" parameterType="int">
        update user set password = #{password} where id = 1
    </update>
</mapper>
